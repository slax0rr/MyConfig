php7.0 php7.0-cli php7.0-common php7.0-curl php7.0-fpm php7.0-json php7.0-mbstring php7.0-mcrypt php7.0-mysql php7.0-opcache php7.0-xml

other steps:
rmmmod pcspkr
echo "blacklist pcspkr" > /etc/modprobe.d/nobeep.conf

git clone https://github.com/powerline/fonts.git
cd fonts/
cd Hack/
mkdir ~/.fonts
cp *.ttf ~/.fonts/
fc-cache -fv

git clone git@github.com:slax0rr/MyConfig.git
cd ~
ln -s Documents/MyConfig/.vimrc .
ln -s Documents/MyConfig/.zshrc .
ln -s Documents/MyConfig/vimfiles .vim
ln -s Documents/MyConfig/.gitignore_global .
ln -s Documents/MyConfig/.gitaliases .
ln -s Documents/MyConfig/.ctags .
ln -s Documents/MyConfig/.Xresources .
